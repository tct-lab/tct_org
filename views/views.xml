      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          点击这里创建
        </p>
      </field>
    </record>







      <record id="view_tree_tct_members" model="ir.actions.act_window">
